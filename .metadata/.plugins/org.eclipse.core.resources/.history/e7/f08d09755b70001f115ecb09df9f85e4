    <!-- JavaScript for Validation -->
    <script>
    document.addEventListener("DOMContentLoaded", function() {
        const form = document.getElementById('signupForm');

        // Input fields
        const userName = document.getElementById('user_Name');
        const userMobileNumber = document.getElementById('userMobileNumber');
        const userEmail = document.getElementById('userEmail');
        const userRole = document.getElementById('userRole');
        const userPassword = document.getElementById('userPassword');
        const confirmPassword = document.getElementById('confirmPassword');

        // Error message containers
        const userNameError = document.getElementById('userNameError');
        const userMobileNumberError = document.getElementById('userMobileNumberError');
        const userEmailError = document.getElementById('userEmailError');
        const userRoleError = document.getElementById('userRoleError');
        const userPasswordError = document.getElementById('userPasswordError');
        const confirmPasswordError = document.getElementById('confirmPasswordError');

        // Helper function to display error messages
        function showError(input, errorContainer, message) {
            errorContainer.textContent = message;
        }

        // Helper function to clear error messages
        function clearErrors() {
            userNameError.textContent = '';
            userMobileNumberError.textContent = '';
            userEmailError.textContent = '';
            userRoleError.textContent = '';
            userPasswordError.textContent = '';
            confirmPasswordError.textContent = '';
        }

        // Validate user name (allows letters and digits only)
        userName.addEventListener('input', function() {
            const nameRegex = /^[a-zA-Z0-9]+$/;
            if (!nameRegex.test(userName.value)) {
                showError(userName, userNameError, 'User Name must contain only letters and digits.');
            } else {
                userNameError.textContent = '';
            }
        });

        // Validate mobile number
        userMobileNumber.addEventListener('input', function() {
            const mobileRegex = /^[0-9]{10}$/;
            if (!mobileRegex.test(userMobileNumber.value)) {
                showError(userMobileNumber, userMobileNumberError, 'Enter a valid 10-digit mobile number.');
            } else {
                userMobileNumberError.textContent = '';
            }
        });

        // Validate email
        userEmail.addEventListener('input', function() {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(userEmail.value)) {
                showError(userEmail, userEmailError, 'Enter a valid email address.');
            } else {
                userEmailError.textContent = '';
            }
        });

        // Validate user role
        userRole.addEventListener('change', function() {
            if (userRole.value === '') {
                showError(userRole, userRoleError, 'User Role is required.');
            } else {
                userRoleError.textContent = '';
            }
        });

        // Validate password
        userPassword.addEventListener('input', function() {
            const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;
            if (!passwordRegex.test(userPassword.value)) {
                showError(userPassword, userPasswordError, 'Password must be at least 8 characters long, and include at least one uppercase letter, one lowercase letter, one digit, and one special character.');
            } else {
                userPasswordError.textContent = '';
            }
        });

        // Validate confirm password
        confirmPassword.addEventListener('input', function() {
            if (confirmPassword.value !== userPassword.value) {
                showError(confirmPassword, confirmPasswordError, 'Passwords do not match.');
            } else {
                confirmPasswordError.textContent = '';
            }
        });

        // Form submission validation
        form.addEventListener('submit', function(event) {
            clearErrors();

            // Trigger input events to check validation on submit
            userName.dispatchEvent(new Event('input'));
            userMobileNumber.dispatchEvent(new Event('input'));
            userEmail.dispatchEvent(new Event('input'));
            userRole.dispatchEvent(new Event('change'));
            userPassword.dispatchEvent(new Event('input'));
            confirmPassword.dispatchEvent(new Event('input'));

            // Check if any errors are present
            if (userNameError.textContent || userMobileNumberError.textContent || 
                userEmailError.textContent || userRoleError.textContent || 
                userPasswordError.textContent || confirmPasswordError.textContent) {
                event.preventDefault(); // Prevent form submission
            }
        });
    });
    </script>
