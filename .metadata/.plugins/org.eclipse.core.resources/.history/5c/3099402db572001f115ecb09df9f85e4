<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1" isELIgnored="false" import="com.crimsonlogic.groceriessubbookingsystem.entity.User"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<!DOCTYPE html>
<html>
<head>
    <title>${pageTitle}</title>
</head>
<body>
    <h1>${pageTitle}</h1>
    
    <c:choose>
        <c:when test="${action == 'add'}">
            <c:if test="${wallet == null}">
                <form action="${pageContext.request.contextPath}/wallet/add" method="post">
                    <input type="hidden" name="user_id" value="${sessionScope.currentUser.user_id}" />
                    
                    <p>
                        <label for="wallet_amount">Amount:</label>
                        <input type="text" id="wallet_amount" name="wallet_amount" value="" />
                    </p>
                    
                    <p>
                        <input type="submit" value="Add Wallet" />
                    </p>
                </form>
            </c:if>
            <c:if test="${wallet != null}">
                <p>You already have a wallet. <a href="${pageContext.request.contextPath}/wallet/list">Back to List</a></p>
            </c:if>
        </c:when>
        <c:when test="${action == 'edit'}">
            <form action="${pageContext.request.contextPath}/wallet/edit" method="post">
                <input type="hidden" name="wallet_id" value="${wallet.wallet_id}" />
                <input type="hidden" name="user_id" value="${wallet.user.user_id}" />
                
                <p>
                    <label for="wallet_amount">Amount:</label>
                    <input type="text" id="wallet_amount" name="wallet_amount" value="${wallet.wallet_amount}" />
                </p>
                
                <p>
                    <input type="submit" value="Update Wallet" />
                </p>
            </form>
        </c:when>
    </c:choose>
    
    <a href="${pageContext.request.contextPath}/wallet/list">Back to List</a>
</body>
</html>
