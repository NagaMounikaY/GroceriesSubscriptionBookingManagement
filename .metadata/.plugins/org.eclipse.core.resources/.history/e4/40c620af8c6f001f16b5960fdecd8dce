package com.crimsonlogic.groceriessubbookingsystem.service;

import java.util.List;
import java.util.Optional;

import com.crimsonlogic.groceriessubbookingsystem.entity.OrderDetails;

public interface OrderDetailsService {

    // Save OrderDetails
    OrderDetails saveOrderDetails(OrderDetails orderDetails);

    // Get all OrderDetails
    List<OrderDetails> getAllOrderDetails();

    // Get OrderDetails by ID
    Optional<OrderDetails> getOrderDetailsById(String id);

    // Delete OrderDetails by ID
    void deleteOrderDetails(String id);
}
