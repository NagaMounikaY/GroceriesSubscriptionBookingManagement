<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1" isELIgnored="false" import="com.crimsonlogic.groceriessubbookingsystem.entity.Users"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<!DOCTYPE html>
<html>
<head>
    <title>${pageTitle}</title>
</head>
<body>
    <h1>${pageTitle}</h1>
    
    <!-- Display wallet details if editing -->
    <c:if test="${action == 'edit'}">
        <h2>Wallet Details</h2>
        <p><strong>Wallet ID:</strong> ${wallet.wallet_id}</p>
        <p><strong>Amount:</strong> ${wallet.wallet_amount}</p>
        <p><strong>User ID:</strong> ${wallet.user.user_id}</p> <!-- Assuming user has user_id property -->
    </c:if>
    
    <!-- Form for adding or editing wallet -->
    <form action="${pageContext.request.contextPath}/wallet/${action}" method="post">
        <input type="hidden" name="wallet_id" value="${wallet.wallet_id}" />
        <input type="hidden" name="user_id" value="${wallet.user.user_id}" /> <!-- Set user_id if editing -->
        
        <p>
            <label for="wallet_amount">Amount:</label>
            <input type="text" id="wallet_amount" name="wallet_amount" value="${wallet.wallet_amount}" />
        </p>
        
        <p>
            <input type="submit" value="${action == 'add' ? 'Add Wallet' : 'Update Wallet'}" />
        </p>
    </form>
    
    <a href="${pageContext.request.contextPath}/wallet/list">Back to List</a>
</body>
</html>
