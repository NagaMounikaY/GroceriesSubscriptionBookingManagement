package com.crimsonlogic.groceriessubbookingsystem.controller;

import java.math.BigDecimal;

import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.crimsonlogic.groceriessubbookingsystem.entity.Users;
import com.crimsonlogic.groceriessubbookingsystem.entity.Wallet;
import com.crimsonlogic.groceriessubbookingsystem.service.WalletService;

@Controller
@RequestMapping("/wallet")
public class WalletController {

    @Autowired
    private WalletService walletService;

    @GetMapping("/view")
    public String viewWallet(Model model,HttpSession session) {
    	Users user = (Users) session.getAttribute("user");
        // Logic to get wallet details
        Wallet wallet = walletService.getWalletByUserId(user.getUser_id());
        model.addAttribute("wallet", wallet);
        return "wallet/view";
    }

    @PostMapping("/addMoney")
    public String addMoney(
            @RequestParam String userId,
            @RequestParam BigDecimal amount,
            Model model) {
        try {
            walletService.addMoneyToWallet(userId, amount);
            model.addAttribute("message", "Money added successfully!");
        } catch (Exception e) {
            model.addAttribute("message", "Error adding money: " + e.getMessage());
        }
        // Redirect to view the updated wallet
        return "redirect:/wallet/view?userId=" + userId;
    }
}
