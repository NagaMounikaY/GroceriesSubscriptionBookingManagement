<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1" isELIgnored="false" import="com.crimsonlogic.groceriessubbookingsystem.entity.Users"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>All Subscriptions</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>
<body>
    <div class="container">
        <h1 class="my-4">All Subscriptions</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Item</th>
                    <th>Frequency</th>
                    <th>Amount</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>Start Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <c:forEach var="subscription" items="${subscriptions}">
                    <tr>
                        <td><c:out value="${subscription.user.user_Name}" /></td>
                        <td><c:out value="${subscription.groceries.groceryName}" /></td>
                        <td><c:out value="${subscription.frequency}" /></td>
                        <td><c:out value="${subscription.amount}" /></td>
                        <td><c:out value="${subscription.quantity}" /></td>
                        <td><c:out value="${subscription.subStatus}" /></td>
                        <td><c:out value="${subscription.startedAt}" /></td>
                        <td>
                            <form class="update-status-form" data-subscription-id="${subscription.subscription_id}">
                                <div class="form-group">
                                    <select name="status" class="form-control">
                                        <option value="Active" <c:if test="${subscription.subStatus == 'Processed'}">selected</c:if>>Processed</option>
                                        <option value="Cancelled" <c:if test="${subscription.subStatus == 'Cancelled'}">selected</c:if>>Cancelled</option>
                                        <!-- Add more statuses if needed -->
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Update Status</button>
                            </form>
                        </td>
                    </tr>
                </c:forEach>
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function() {
            $('.update-status-form').on('submit', function(e) {
                e.preventDefault(); // Prevent the form from submitting normally

                var form = $(this);
                var subscriptionId = form.data('subscription-id');
                var newStatus = form.find('select[name="status"]').val();

                $.ajax({
                    url: '/subscription/update-status',
                    method: 'POST',
                    data: {
                        eventId: subscriptionId,
                        status: newStatus
                    },
                    success: function(response) {
                        if (response.success) {
                            form.parent().siblings('td').eq(5).text(newStatus); // Update status text
                            alert('Status updated successfully!');
                        } else {
                            alert('Failed to update status: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('An error occurred while updating the status.');
                    }
                });
            });
        });
    </script>
</body>
</html>
