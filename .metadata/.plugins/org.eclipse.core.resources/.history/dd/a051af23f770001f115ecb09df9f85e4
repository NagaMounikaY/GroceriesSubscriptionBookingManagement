<body>
    <div class="container mt-5">
        <h1 class="mb-4">Order List</h1>
        <c:if test="${not empty orders}">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>User</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Order Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <c:forEach var="order" items="${orders}">
                        <tr>
                            <td>${order.order_id}</td>
                            <td>${order.users.username}</td>
                            <td>${order.totalAmount}</td>
                            <td>${order.orderStatus}</td>
                            <td>${order.order_date}</td>
                            <td>
                                <a href="${pageContext.request.contextPath}/orders/${order.order_id}" class="btn btn-info">View</a>
                                <form action="${pageContext.request.contextPath}/orders/${order.order_id}" method="post" style="display:inline;">
                                    <input type="hidden" name="_method" value="delete">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    </c:forEach>
                </tbody>
            </table>
        </c:if>
        <c:if test="${empty orders}">
            <p>No orders found.</p>
        </c:if>
    </div>
