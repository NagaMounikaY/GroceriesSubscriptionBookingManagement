            </c:otherwise>
        </c:choose>
        <div class="text-center btn-back">
            <a href="${pageContext.request.contextPath}/groceries/list" class="btn btn-secondary">Back to Menu</a>
            <a href="${pageContext.request.contextPath}/orders/order?groceryId=${order.grocery.grocery_id}" class="btn btn-secondary">Back to Quantity</a>
