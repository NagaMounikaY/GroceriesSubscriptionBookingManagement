<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form" %>
<%@ taglib uri="http://www.springframework.org/tags" prefix="spring" %>
<!DOCTYPE html>
<html>
<head>
    <title>Wallet View</title>
</head>
<body>
    <h1>Wallet Information</h1>

    <c:if test="${not empty message}">
        <p>${message}</p>
    </c:if>

    <table border="1">
        <tr>
            <th>Wallet ID</th>
            <th>User ID</th>
            <th>Amount</th>
        </tr>
        <tr>
            <td>${wallet.wallet_id}</td>
            <td>${wallet.user.user_id}</td>
            <td>${wallet.wallet_amount}</td>
        </tr>
    </table>

    <h2>Add Money to Wallet</h2>
    <form action="${pageContext.request.contextPath}/wallet/addMoney" method="post">
        <input type="hidden" name="userId" value="${wallet.user.user_id}"/>
        <label for="amount">Amount:</label>
        <input type="text" id="amount" name="amount"/>
        <button type="submit">Add Money</button>
    </form>

    <a href="${pageContext.request.contextPath}/wallet/view?userId=${wallet.user.user_id}">Refresh</a>
</body>
</html>
