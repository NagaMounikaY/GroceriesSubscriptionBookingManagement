        <h2 class="mb-4">My Subscriptions</h2>
        <div id='calendar'></div>
    </div>
    <script>
        $(document).ready(function() {
            var events = [
                <c:forEach var="subscription" items="${subscriptions}">
                    {
                        title: '${subscription.user.user_Name}',
                        start: '${subscription.startedAt}',
                        end: '${subscription.amount}'
                    },
                </c:forEach>
            ];

            $('#calendar').fullCalendar({
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                defaultView: 'month',
                editable: false,
                events: events
            });
        });
    </script>
